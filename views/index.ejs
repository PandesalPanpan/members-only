<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="container">
        <%- include("partials/navigation.ejs") %>

        <section>
            <h1 class="muted">Messages</h1>

            <% if (messages && messages.length) { %>
                <div class="messages" role="list">
                    <% messages.forEach(msg => { %>
                        <article class="card" role="listitem" aria-label="Message by <%= msg.username %>">
                            <h3><%= msg.title %></h3>
                            <p class="muted"><%= msg.message %></p>
                            <div class="align-right">
                                <span class="muted">â€” <%= msg.username %></span>
                                <% if (locals.isAdmin) { %>
                                    <a class="btn secondary" href="/message/<%= msg.id %>/delete">Delete</a>
                                <% } %>
                            </div>
                        </article>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="muted">No messages yet.</p>
            <% } %>
        </section>
    </div>
</body>

</html>